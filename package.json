{
  "name": "sample-client",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/npuserauth/npuser-sample"
  },
  "author": "Bryan Gilbert",
  "license": "MIT",
  "description": "A simple Node JS script that acts like a npuser client.",
  "main": "main.js",
  "scripts": {
    "watch": "webpack --watch --mode=development",
    "build": "webpack --mode=development",
    "build:run": "npm run build && npm run run",
    "run": "cp .dev.env .env && node dist/main.js",
    "run:prod": "cp .prod.env .env && npm run build && node dist/main.js"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "npuser-client": "^1.0.16",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "nodemon-webpack-plugin": "^4.3.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  }
}
